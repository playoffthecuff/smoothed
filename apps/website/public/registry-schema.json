{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"type": "object",
	"properties": {
		"name": { "type": "string" },
		"url": { "type": "string", "format": "uri" },
		"items": {
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"name": { "type": "string" },
					"regDeps": { "type": "array", "items": { "type": "string" } },
					"pkgDeps": { "type": "array", "items": { "type": "string" } },
					"files": {
						"minItems": 1,
						"type": "array",
						"items": {
							"type": "object",
							"properties": {
								"path": { "type": "string" },
								"target": { "type": "string" }
							},
							"required": ["path"],
							"additionalProperties": false
						}
					}
				},
				"required": ["name", "files"],
				"additionalProperties": false
			}
		},
		"$schema": { "type": "string" }
	},
	"required": ["name", "url", "items"],
	"additionalProperties": false
}
